@using proyecto1.Models;
@model List<RolCLS>
@{
    ViewBag.Title = "Index";
}

<h2>Listado de Roles</h2>
@Html.ActionLink("Agregar", "Agregar","Rol", null, new { @class = "btn btn-primary"})


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td width="10%">@Html.LabelFor(p => Model[0].iidRol)</td>
            <td width="20%">@Html.LabelFor(p => Model[0].nombreR)</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.iidRol </td>
                <td>@item.nombreR </td>
            </tr>
        }
    </tbody>

</table>

